#!/usr/bin/env python

import logging
import oozie

if __name__ == '__main__':
    logging.basicConfig(level=logging.DEBUG)
    wf = oozie.workflow({
        'name': 'echoWorkflow',
    })
    action1 = wf.add_action({
        'template': 'map-reduce',
        'name': 'action1',
    })
    oozie.client().run(wf)
